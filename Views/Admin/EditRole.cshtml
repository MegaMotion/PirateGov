@using TestCoreApp.Models.ViewModels.Admin;
@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h1>@ViewBag.Title</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if(Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {

            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Admin" class="btn btn-primary" style="width:auto" asp-route-roleId="@Model.Id">Add or Remove Users</a>
            <a asp-action="ListRoles" asp-controller="Admin" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>


